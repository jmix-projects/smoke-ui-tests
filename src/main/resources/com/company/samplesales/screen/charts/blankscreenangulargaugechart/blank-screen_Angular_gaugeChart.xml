<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:chart="http://jmix.io/schema/ui/charts"
        caption="msg://blankScreenAngularGaugechart.caption">
    <layout>
        <chart:gaugeChart id="gaugeChart"
                          height="50%"
                          width="50%">
            <chart:axes>
                <chart:axis axisAlpha="0.2"
                            axisThickness="1"
                            bottomText="60 km/h"
                            bottomTextYOffset="-20"
                            endValue="220"
                            tickAlpha="0.2"
                            valueInterval="20">
                    <chart:bands>
                        <chart:band color="#84b761"
                                    endValue="90"
                                    startValue="0"/>
                        <chart:band color="#fdd400"
                                    endValue="130"
                                    startValue="90"/>
                        <chart:band color="#cc4748"
                                    endValue="220"
                                    innerRadius="95%"
                                    startValue="130"/>
                    </chart:bands>
                </chart:axis>
            </chart:axes>
            <chart:arrows>
                <chart:arrow value="60"/>
            </chart:arrows>
            <chart:export/>
        </chart:gaugeChart>
    </layout>
</window>